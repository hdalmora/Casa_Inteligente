<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="20dp"
    android:fitsSystemWindows="true"
    android:paddingBottom="20dp"
    android:background="@color/colorBackground"
    tools:context="com.example.pichau.casainteligente.LauncherActivity">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_smart_home"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Casa Inteligente"
        android:textColor="@color/colorFont"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"/>
    
    <View
        android:layout_width="90dp"
        android:layout_height="0.001dp"
        android:background="@color/colorFont"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controle componentes eletrÃ´nicos"
        android:textColor="@color/colorFont"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="presentes em sua casa"
        android:textColor="@color/colorFont"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/home_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="INICIAR"
        android:textColor="@color/colorFont"
        android:background="@color/colorBtnBackgroundGreen"/>

</LinearLayout>
